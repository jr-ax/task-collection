{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "inputs": [
    {
      "type": "promptString",
      "id": "ipAddress",
      "description": "The target PLC IP address",
      "default": "192.168.0.12"
    }
    ],
    "tasks": [
      {
        "label": "SW | Compile",
        "type": "shell",
        "command": "apax build",
        "problemMatcher": []
      },
      {
        "label": "TIAX | Create handover documents",
        "type": "shell",
        "command": "apax ax2tia -i ${workspaceFolder}\\bin\\1500\\${workspaceFolderBasename}.lib -o ${workspaceFolder}\\bin\\handover-folder -t 1500",
        "dependsOn": "SW | Compile",
        "problemMatcher": []
      },      
      {
        "label": "TIAX | Create TIA Portal library",
        "type": "shell",
        "command": "&'C:/Program Files/Siemens/Automation/Portal V19/bin/Siemens.Simatic.Lang.Library.Importer.exe' -i ${workspaceFolder}\\bin\\handover-folder -o ${workspaceFolder}\\bin\\TIAPortalLibrary1500 -u",
        "dependsOn": "TIAX | Create handover documents",
        "problemMatcher": []
      },
      {
        "label": "ONLINE | Set to RUN",
        "type": "shell",
        "command": "apax plc-info set-mode RUN -t ${input:ipAddress}",
        "problemMatcher": []
      },
      {
        "label": "ONLINE | Set to STOP",
        "type": "shell",
        "command": "apax plc-info set-mode STOP -t ${input:ipAddress}",
        "problemMatcher": []
      }
    ]
  }